<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form action="/Twins/StartIotControlCommandResponse" method="get">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">IOT Devices</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-check form-switch pb-3">
                        <label class="form-check-label" for="cobotCheckbox">Cobot</label>
                        <input class="form-check-input" type="checkbox" id="cobotCheckbox" name="cobotSwitchCheckDefault" value="true" checked>
                    </div>
                    <div class="form-check form-switch pb-3">
                        <label class="form-check-label" for="controlBoxCheckbox">Control Box</label>
                        <input class="form-check-input" type="checkbox" id="controlBoxCheckbox" name="controlBoxSwitchCheckDefault" value="true" checked>
                    </div>
                    <div class="form-check form-switch pb-3">
                        <label class="form-check-label" for="payloadCheckbox">Payload</label>
                        <input class="form-check-input" type="checkbox" id="payloadCheckbox" name="payloadSwitchCheckDefault" value="true" checked>
                    </div>
                    <div class="form-check form-switch pb-3">
                        <label class="form-check-label" for="baseCheckbox">Base</label>
                        <input class="form-check-input" type="checkbox" id="baseCheckbox" name="baseSwitchCheckDefault" value="true" checked>
                    </div>
                    <div class="form-check form-switch pb-3">
                        <label class="form-check-label" for="shoulderCheckbox">Shoulder</label>
                        <input class="form-check-input" type="checkbox" id="shoulderCheckbox" name="shoulderSwitchCheckDefault" value="true" checked>
                    </div>
                    <div class="form-check form-switch pb-3">
                        <label class="form-check-label" for="elbowCheckbox">Elbow</label>
                        <input class="form-check-input" type="checkbox" id="elbowCheckbox" name="elbowSwitchCheckDefault" value="true" checked>
                    </div>
                    <div class="form-check form-switch pb-3">
                        <label class="form-check-label" for="wrist1Checkbox">Wrist1</label>
                        <input class="form-check-input" type="checkbox" id="wrist1Checkbox" name="wrist1SwitchCheckDefault" value="true" checked>
                    </div>
                    <div class="form-check form-switch pb-3">
                        <label class="form-check-label" for="wrist2Checkbox">Wrist2</label>
                        <input class="form-check-input" type="checkbox" id="wrist2Checkbox" name="wrist2SwitchCheckDefault" value="true" checked>
                    </div>
                    <div class="form-check form-switch pb-3">
                        <label class="form-check-label" for="wrist3Checkbox">Wrist3</label>
                        <input class="form-check-input" type="checkbox" id="wrist3Checkbox" name="wrist3SwitchCheckDefault" value="true" checked>
                    </div>
                    <div class="form-check form-switch">
                        <label class="form-check-label" for="toolCheckbox">Tool</label>
                        <input class="form-check-input" type="checkbox" id="toolCheckbox" name="toolSwitchCheckDefault" value="true" checked>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Execute</button>
                </div>
            </div>
        </form>
    </div>
</div>
