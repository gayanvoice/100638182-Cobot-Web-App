            <div class="pe-2">
                <span>Time Series Dashboard</span> (<span id="timeseriesDashboardElapsedSpan">Loading</span><small class="text-body-secondary fw-light">/ms</small>)
            </div>
            <div>
                <span class="spinner-border text-primary" id="timeseriesDashboardSpinner" style="display: block" role="status">
                    <span class="visually-hidden">Loading...</span>
                </span>
            </div>
        </div>
        <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
            <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm">
                    <div class="card-header py-3">
                        <h4 class="my-0 fw-normal">Cobot</h4>
                    </div>
                    <div class="card-body">
                        <div class="mt-2 mb-4 ">
                            <div class="card-title pricing-card-title mb-4 h3" id="cobotStatusLabelDiv">null</div>
                        </div>
                        <a class="w-100 btn btn-lg btn-primary" asp-area="Timeseries" asp-action="Cobot">Open</a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm">
                    <div class="card-header py-3">
                        <h4 class="my-0 fw-normal">Control Box</h4>
                    </div>
