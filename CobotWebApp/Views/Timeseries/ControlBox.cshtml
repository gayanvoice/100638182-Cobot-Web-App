@model CobotWebApp.Models.View.TimeseriesViewModel.ControlBoxViewModel;

<div class="container py-3">
    <partial name="_HeaderPartial" />
    <main>
        @await Html.PartialAsync("_BreadCrumbPartial", Model.BreadCrumbPartialViewModelList)
        <div class="h2 pb-4 pt-2 d-flex flex-row">
            <div class="pe-2">
                <span>Control Box</span> (<span id="timeseriesControlBoxElapsedSpan">Loading</span><small class="text-body-secondary fw-light">/ms</small>)
            </div>
            <div>
                <span class="spinner-border text-primary" id="timeseriesControlBoxSpinner" style="display: block" role="status">
                    <span class="visually-hidden">Loading...</span>
                </span>
            </div>
        </div>
        <div class="row row-cols-1 row-cols-md-3 mb-3">
            <div class="pe-2">
                <span class="h3">Voltage</span>
            </div>
            <div id="controlBoxVotlageGraphDiv" style="width:100%;height:350px"></div>
        </div>
    </main>
</div>
