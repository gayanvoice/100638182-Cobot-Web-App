@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<nav class="d-inline-flex mt-2 mt-md-0 ms-md-auto">
    @if (SignInManager.IsSignedIn(User))
    {
            <a class="me-3 py-2 link-body-emphasis text-decoration-none text-black" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        <a class="me-3 py-2 link-body-emphasis text-decoration-none text-black" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Logout</a>
    }
    else
    {
        <a class="me-3 py-2 link-body-emphasis text-decoration-none text-black" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a class="me-3 py-2 link-body-emphasis text-decoration-none text-black" asp-area="Identity" asp-page="/Account/Login">Login</a>
    }
</nav>