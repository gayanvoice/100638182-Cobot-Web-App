@model CobotWebApp.Models.View.IotViewModel.ClosePopupControlCommandResponseViewModel;

<div class="container py-3">
    <partial name="_HeaderPartial" />
    <main>
        @await Html.PartialAsync("_BreadCrumbPartial", Model.BreadCrumbPartialViewModelList)
        @if (Model.ClosePopupControlCommandResponseModel is not null)
        {
            <div class="container" id="icon-grid">
                @if (Model.ClosePopupControlCommandResponseModel.CommandResponse is not null
               && Model.ClosePopupControlCommandResponseModel.CommandResponse.Payload is not null
               && Model.ClosePopupControlCommandResponseModel.CommandResponse.Payload.Status is not null)
                {
                    if (Model.ClosePopupControlCommandResponseModel.CommandResponse.Payload.Status.Equals("COBOT_CLIENT_EXECUTED"))
                    {
                        <h2 class="py-3">Close Popup Control Command Response <span class="badge text-bg-success rounded-pill">Success</span></h2>
                    }
                    else if (Model.ClosePopupControlCommandResponseModel.CommandResponse.Payload.Status.Equals("COBOT_CLIENT_ERROR"))
                    {
                        <h2 class="py-3">Close Popup Control Command Response <span class="badge text-bg-danger rounded-pill">Error</span></h2>
                    }
                    else
                    {
                        <h2 class="py-3">Close Popup Control Command Response <span class="badge text-bg-danger rounded-pill">Error</span></h2>
                    }

                }
                else
                {
                    <div class="h2 pb-3">Close Popup Control Command Response <span class="badge text-bg-danger rounded-pill">Error</span></div>
                }
                <div class="row row-cols-1 g-4 pb-3">
                    <div class="col d-flex align-items-start">
                        <div>
                            <div class="display-6 mb-0">@Model.ClosePopupControlCommandResponseModel.Message</div>
                            <div class="h5">Message</div>
                        </div>
                    </div>
                </div>
                <div class="row row-cols-2 g-4 pb-3">
                    <div class="col d-flex align-items-start">
                        <div>
                            <div class="display-6 mb-0">@Model.ClosePopupControlCommandResponseModel.Duration</div>
                            <div class="h5">API Execution Duration</div>
                        </div>
                    </div>
                    @if (Model.ClosePopupControlCommandResponseModel.CommandResponse is not null && Model.ClosePopupControlCommandResponseModel.CommandResponse.Payload is not null)
                    {
                        <div class="col d-flex align-items-start">
                            <div>
                                <div class="display-6 mb-0">@Model.ClosePopupControlCommandResponseModel.CommandResponse.Payload.Duration</div>
                                <div class="h5">Cobot Execution Duration</div>
                            </div>
                        </div>
                    }
                </div>
                @if (Model.ClosePopupControlCommandResponseModel.CommandResponse is not null && Model.ClosePopupControlCommandResponseModel.CommandResponse.Payload is not null)
                {
                    <div class="row row-cols-1 g-4 py-3 border-bottom">
                        <div class="col d-flex align-items-start">
                            <div>
                                <div class="h3 mb-0">Response</div>
                            </div>
                        </div>
                    </div>
                     <div class="row row-cols-1 g-4 py-3">
                         <div class="col d-flex align-items-start">
                            <div>
                                <div class="h4 mb-0">@Model.ClosePopupControlCommandResponseModel.CommandResponse.Result</div>
                                <div class="h6">Result</div>
                            </div>
                        </div>
                        <div class="col d-flex align-items-start">
                            <div>
                                <div class="h4 mb-0">@Model.ClosePopupControlCommandResponseModel.CommandResponse.Payload.Status</div>
                                <div class="h6">Status</div>
                            </div>
                        </div>
                        <div class="col d-flex align-items-start">
                            <div>
                                <div class="h4 mb-0">@Model.ClosePopupControlCommandResponseModel.CommandResponse.Payload.LogText</div>
                                <div class="h6">Log Text</div>
                            </div>
                        </div>
                    </div>
                }
                @if (Model.ClosePopupControlCommandResponseModel.CommandRequest is not null)
                {
                    <div class="row row-cols-1 g-4 py-3 border-bottom">
                        <div class="col d-flex align-items-start">
                            <div>
                                <div class="h3 mb-0">Request</div>
                            </div>
                        </div>
                    </div>
                    <div class="row row-cols-2 g-4 py-3">
                        <div class="col d-flex align-items-start">
                            <div>
                                <div class="h4 mb-0">@Model.ClosePopupControlCommandResponseModel.CommandRequest.DeviceId</div>
                                <div class="h6">Device Id</div>
                            </div>
                        </div>
                        <div class="col d-flex align-items-start">
                            <div>
                                <div class="h4 mb-0">@Model.ClosePopupControlCommandResponseModel.CommandRequest.ResponseTimeout</div>
                                <div class="h6">Response Timeout</div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
              <div class="container" id="icon-grid">
                    <div class="h2 pb-3">Enable Control Command Response Not Available</div>
              </div>
        }
        <a class="w-100 btn btn-lg btn-primary mt-3" asp-controller="Iot" asp-action="Dashboard">Back</a>
    </main>
</div>

